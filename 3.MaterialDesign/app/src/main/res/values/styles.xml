<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style applied to all CardViews -->
    <style name="CardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!-- Style applied to the last CardView -->
    <style name="CardViewStyle.LastCard">
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!-- Style applied to all texts displaying the date -->
    <style name="DateText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Style applied to the floating button-->
    <style name ="FloatingButtonStyle">
        <item name="android:layout_width" >wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|bottom</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:backgroundTint">@color/GreenRadioButton</item>
    </style>

</resources>
